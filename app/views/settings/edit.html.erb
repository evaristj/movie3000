<div class="box">
    <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Editar Setting</div> 
        <%= form_for(@setting) do |f| %>
        <div class="field">
            <%= f.text_field :country, placeholder: "Pais", class:"form-control" %>
        </div> 
        <div class="field">
            <%= f.text_field :language, placeholder: "Idioma", class:"form-control" %>
        </div> 
           
        <div class="field">
            <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
        </div>
    <% end %>
    <%= link_to 'Back', settings_path, class:"btn btn-sm btn-primary", style:"margin-top: 15px;" %> 
  <br></br> 
     
 

</div> <!-- end box -->

 