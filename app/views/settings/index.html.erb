<!-- tipo de letra-->
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<style>
	body {
		font-family: 'Montserrat', sans-serif;
	}
</style>
<!-- enlace a header-->
<%= render "shared/header" %>

<!-- cuerpo de página settings-->
<div class="container">
	<% if flash.present? %>
		<div class="row">
			<div class="col-sm-12 col-md-6 colmd-offset-3" style="padding:25px">
			<%= render partial: "shared/flash_messages", flash: flash %>
		</div>
	<% end %>
	<div class="row">
		<p class="opciones">CONFIGURACIÓN DE LA CUENTA</p><hr><br>
		<div class="col-xs-12 col-md-10 col-lg-10">
			<h4>Cambiar idioma y país de tu cuenta</h4>
					<!-- COMPROBACIO DE SETTING SI NO ES NULL -->   	 
				 	<% if !@setting.nil? %>
		 		<div class="col-md-3">		 
		   		<p>País: <%= @setting.country %></p><br/><br/>
		   	</div>
		   	
		   		<p>Idioma: <%= @setting.language %></p><br/><br/>	 
		   	<div class="col-md-3">
		      <%= link_to 'Editar', edit_setting_path(@setting.id), :title => "Editar", class:'btn btn-md btn-primary fa fa-1x fa-edit', style:"color: white;" %>
		      <br></br>
				 	<%else%>
				   	<%= link_to 'Añadir', new_setting_path, title:"Añadir setting!!", class:"btn btn-md btn-danger fa fa-1x fa-address-book nodecor pull-right", style:"color:white;" %>
				 	<%end%>
		 		</div>
		</div><br><hr>
		<div class="col-xs-12 col-md-8 col-lg-8">
				<div class="interlineado"><p><b>Pago con Stripe </b><a href="#"><b>	Edit</b>	</a></p><p><h5>
				</div>
			 		<% if !@payment.nil? %>
						<h2>Payments</h2>
						<%@payment.each do |payment|%>
							<p><b>Subscription active:</b></p>
							<p><%= payment.subscription %></p>
							<p><b>Payment Channel:</b></p>
							<p><%= payment.channel %></p>
							<p><b>Payment active:</b></p>
							<p><%= payment.active %></p>
							<p><b>Plan:</b></p>
							<p><%= payment.plan %></p> 
							<p><b>Amount payed:</b></p>
							<p><%= payment.amount %></p>
							<hr>				
						<%end%>
					<%end%>
 				</div></h5></p><br><br><hr>
			</div>
			<div class="interlineado"><p><b>Change or Confirm Email Address </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Change or confirm your email address for your Rotten Tomatoes account.</h5></p></div><br>

			<div class="interlineado"><p><b>Profile Display Name </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Edit your public profile display name.</h5></p></div><br>

			<div class="interlineado"><p><b>Profile Details </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Edit public profile information about yourself.</h5></p></div><br>

			<div class="interlineado"><p><b>Email Preferences </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Modify your email subscription settings.</h5></p></div><br>

			<div class="interlineado"><p><b>Password </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Change the password for your Rotten Tomatoes account.</h5></p></div><br>

			<div class="interlineado"><p><b>Privacy Settings </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Manage your profile visibility and share settings.</h5></p></div><br>

			<div class="interlineado"><p><b>Change Country </b><a href="#"><b> Edit </b></a></p>
			<p><h5>Manage your localization setting.</h5></p></div><br>
			<div class="interlineado"><p><b>Delete Account </b><a href="#"><b> Delete Account</b></a></p>
			<p><h5>Terminate your Rotten Tomatoes account and disconnect from any attached social networks.</h5></p></div><br>
		</div>
	</div>
	<hr>
</div>
<hr>

<!--inicio footer-->
<%= render "shared/footer" %>
